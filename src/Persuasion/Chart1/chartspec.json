{
    "$schema": "https://vega.github.io/schema/vega/v4.json",
    "width": 120,
    "height": 250,
    "autosize": "fit",
    "signals": [
        {
            "name": "selected",
            "value": "",
            "on": [
                {
                    "events": "arc:click!",
                    "update": "datum"
                },
                {
                    "events": "dblclick!",
                    "update": "''"
                }
            ]
        }
    ],
    "data": [
        {
            "name": "table",
            "values": [
                {
                    "Count": 1,
                    "Status": "Some data"
                },
                {
                    "Count": 5,
                    "Status": "Another data"
                },
                {
                    "Count": 18,
                    "Status": "One more data"
                }
            ],
            "transform": [
                {
                    "type": "pie",
                    "field": "Count",
                    "groupby": ["Status"]
                }
            ]
        }
    ],
    "scales": [
        {
            "name": "color",
            "type": "ordinal",
            "range": {
                "scheme": "category20"
            }
        }
    ],
    "marks": [
        {
            "name": "mark",
            "type": "arc",
            "interactive": true,
            "from": {
                "data": "table"
            },
            "encode": {
                "enter": {
                    "fill": {
                        "scale": "color",
                        "field": "Status"
                    },
                    "x": {
                        "signal": "width / 2"
                    },
                    "y": {
                        "signal": "height / 2"
                    },
                    "tooltip": {
                        "signal": "datum"
                    }
                },
                "update": {
                    "startAngle": {
                        "field": "startAngle"
                    },
                    "endAngle": {
                        "field": "endAngle"
                    },
                    "padAngle": [
                        {
                            "value": 0.01
                        }
                    ],
                    "outerRadius": {
                        "signal": "width / 5"
                    },
                    "cornerRadius": {
                        "value": 0
                    },
                    "innerRadius": {
                        "signal": 45
                    },
                    "opacity": [
                        {
                            "value": 1.0
                        }
                    ],
                    "fill": [
                        {
                            "scale": "color",
                            "field": "Status"
                        }
                    ]
                },
                "hover": {}
            }
        }
    ]
}
